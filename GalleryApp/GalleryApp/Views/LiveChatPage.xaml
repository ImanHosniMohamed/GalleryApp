<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalleryApp.Views.LiveChatPage" 
             xmlns:translate="clr-namespace:GalleryApp.Resources"
             Title="{x:Static translate:AppResources.LiveChat}" 
             Style="{StaticResource Page}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Search"  IconImageSource="search"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <StackLayout>
            <Label Text="Sorry, service is not available"
               Style="{StaticResource DefaultLabel}"
                   HorizontalOptions="CenterAndExpand"
                   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>